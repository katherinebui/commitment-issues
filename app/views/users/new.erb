<h1>I am ready for commitment.</h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<form action="/users" method="POST" id="new_user_form">
  <input type="text" name="user[email]" placeholder="Email:"><br>
  <input type="text" name="user[username]" placeholder="Username:"><br>
  <input type="password" name="user[password]" placeholder="Password:"><br>
  <input type="password" name="password_confirmation" placeholder="Password Confirmation:"><br>
  <input type="submit" value="submit" id="new_user_button" class="btn btn-default">
</form>
</center>

